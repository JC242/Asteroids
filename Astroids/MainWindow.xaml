                <ImageBrush ImageSource="space the final frontier.jpg"/>
            </Canvas.Background>
            <Label x:Name="tITLE" Content="ASTEROIDS" Canvas.Left="594" Canvas.Top="176" Height="101" Width="474" Background="{x:Null}" FontFamily="BankGothic Lt BT" FontSize="72" Foreground="#FFF4F3F3">
