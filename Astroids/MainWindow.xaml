                    </LinearGradientBrush>
                </Label.BorderBrush>
            </Label>
            <Label x:Name="lblSPACE" Content="presione enter para empezar" Canvas.Left="426" Canvas.Top="513" Height="164" Width="907" FontFamily="BankGothic Lt BT" FontSize="48" Foreground="#FFFFF8F8"/>
